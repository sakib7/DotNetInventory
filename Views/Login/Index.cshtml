@model Inventory.Models.Employee

@{
    ViewBag.Title = "Index";
}
@section Navigation{
    @Html.Partial("_NavBar", "Log In");
}

<h2>Log in</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Username:</label>
            <div class="col-md-10">
                @*<input class="form-control" name="username" type="text" placeholder="enter employee username" />*@
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-md-2">Password:</label>
            <div class="col-md-10">
                @*<input class="form-control" name="password" type="text" placeholder="enter employee password" />*@
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </div>
</div>

  }


