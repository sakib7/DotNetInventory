                @if (user.role.Equals("admin"))
                {
                    <text>Organization:<strong>@user.organization</strong></text>
                }
                else
                {
                    <text>Organization:<strong>@user.organization</strong>; Branch:<strong>@user.branch</strong>;</text>
                }
            </div>

            <div class="col-md-1" style="margin-top:10px">
                <form action="@Url.Action("Logout","Login")">
                    <input type="submit" value="Log Out" class="btn btn-default" />
                </form>
            </div>
        </div>

    }
    else
    {
        <div class="row" style="margin-top:-50px">
            <div class="col-md-12">
                <h1 class="text-center">Smart Vendor</h1>
                <p class="text-center">An online inventory management system</p>
