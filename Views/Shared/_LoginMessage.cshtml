@using Inventory.Models

@{
    User user = Session["user"] as User;
    if (user != null)
    {
        
        @*<table>
            <tr>
                <td width="300px">smart Vendor</td>
                <td width="200px">logged in as @emp.role</td>
                <td width="200px"><input type="submit" value="Log Out" class="btn btn-default" /></td>
